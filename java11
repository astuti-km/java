1.//USING LOOP 
import java.util.*;
class Main{
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        int n=sc.nextInt();
        for(int i=0;i<n;i++){
            for(int j=0;j<=i;j++){
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}
output
5
* 
* * 
* * * 
* * * * 
* * * * * 

2.//USING LOOP
import java.util.*;
class Main{
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        int n=sc.nextInt();
        for(int i=n;i>=1;i--){
            for(int j=1;j<=i;j++){
                System.out.print("* ");
            }
            System.out.println();
        }
    }
  output
5
* * * * * 
* * * * 
* * * 
* * 
* 

3.//USING LOOP
import java.util.*;
class Main{
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        int n=sc.nextInt();
        for(int i=1;i<=n;i++){
            for(int j=1;j<=n;j++){
                if(i==1||j==1||j==n||i==n){
                    System.out.print("*");
                }
                else {
                    System.out.print(" ");
                }}
                System.out.println();
        }
    }
}
output
  5
*****
*   *
*   *
*   *
*****

  4.//USING LOOP
import java.util.*;
class Main{
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        int n=sc.nextInt();
        for(int i=1;i<=n;i++){
            for(int j=i;j<=n;j++){
                 System.out.print(" ");}
                 for(int j=1;j<=2*i-1;j++){
                     System.out.print("*");
                 }
                 System.out.println();
            }
            for(int i=n-1;i>=1;i--){
            for(int j=i;j<=n;j++){
                 System.out.print(" ");}
                 for(int j=1;j<=2*i-1;j++){
                     System.out.print("*");
                 }
                 System.out.println();
            }}}
output
  5
     *
    ***
   *****
  *******
 *********
  *******
   *****
    ***
     *

