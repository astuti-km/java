 7. //USING LOOP
  import java.util.*;
class Main{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
        int n=in.nextInt();
        for(int i=1;i<=n;i++){
            for(int j=1;j<=i;j++){
               System.out.print("* ");
            }
            System.out.println();
        }
        for(int i=n-1;i>=1;i--){
            for(int j=1;j<=i;j++){
               System.out.print("* ");
            }
            System.out.println();
        }}}
output
  5
* 
* * 
* * * 
* * * * 
* * * * * 
* * * * 
* * * 
* * 
* 

8.  //USING LOOP
  import java.util.*;
class Main{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
        int n=in.nextInt();
        for(int i=1;i<=n;i++){
            for(int j=i;j<n;j++){
              System.out.print(" ");  
            }
            for(int j=1;j<=(2*i-1);j++){
                if(j==1||j==(2*i-1)||i==n){
                    System.out.print("*");
                }
                else {
                    System.out.print(" ");
                }
        }
        System.out.println();
    }}
}
output
  5
    *
   * *
  *   *
 *     *
*********

 9. //USING LOOP
  import java.util.*;
class Main{
    public static void main(String args[]){
        Scanner in = new Scanner(System.in);
        int n=in.nextInt();
        for(int i=1;i<=n;i++){
            for(int j=1;j<=n;j++){
                if(j==i||j==n-i+1){
                    System.out.print("*");
                }
                System.out.print(" ");
            }
            System.out.println();
        }}}
output
  5
*    * 
 *  *  
  *   
 *  *  
*    * 

